Procedure OpenMainWindow(x = 0, y = 0, width = 570, height = 425)
  OpenWindow(#MainWindow, x, y, width, height, "CTypeTable", #PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_ScreenCentered)
  ListIconGadget(#LI_CTypeTable, 5, 40, 560, 315, "C", 100, #PB_ListIcon_MultiSelect | #PB_ListIcon_GridLines | #PB_ListIcon_FullRowSelect | #PB_ListIcon_AlwaysShowSelection)
  AddGadgetColumn(#LI_CTypeTable, 1, "Name", 80)
  AddGadgetColumn(#LI_CTypeTable, 2, "E", 70)
  AddGadgetColumn(#LI_CTypeTable, 3, "Size", 60)
  AddGadgetColumn(#LI_CTypeTable, 4, "Range", 200)
  StringGadget(#ST_Arguments, 5, 360, 405, 30, "")
  ButtonGadget(#BT_Save, 515, 360, 50, 30, "Save")
  ButtonGadget(#BT_Delete, 465, 360, 45, 30, "Delete")
  ButtonGadget(#BT_Add, 415, 360, 45, 30, "Add")
  ST_Search = StringGadget(#PB_Any, 5, 5, 510, 25, "")
  ButtonGadget(#BT_Search, 520, 5, 45, 30, "Search")
  ComboBoxGadget(#CB_PureTypes, 5, 395, 560, 25)
EndProcedure

Procedure MainWindow_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case #BT_Save
          Save(EventType())          
        Case #BT_Delete
          Delete(EventType())          
        Case #BT_Add
          Add(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

